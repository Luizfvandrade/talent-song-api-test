generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  email    String @unique
  password String

  Favorite_Songs Favorite_Songs[]

  @@map("users")
}

model Favorite_Songs {
  id String @id @default(uuid())

  user_id String
  user    Users  @relation(fields: [user_id], references: [id])

  song_name String
  artist    String
  album     String

  @@map("favorite_songs")
}
